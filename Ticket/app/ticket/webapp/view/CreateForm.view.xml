<mvc:View
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.uxap"
		xmlns:layout="sap.ui.layout"
		xmlns:m="sap.m"
		controllerName="ticket.controller.CreateForm"
		height="100%"
        xmlns:forms="sap.ui.layout.form"
        xmlns:core="sap.ui.core">

	<ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false" showFooter="true">
		<headerTitle>
			<ObjectPageHeader id="headerForTest"
							  objectTitle="Create Ticket"
							  titleSelectorPress="handleTitleSelectorPress"	  
							  titleSelectorTooltip="Custom Tooltip">
                              	<navigationBar>
					<m:Bar>
						<m:contentLeft>
							<m:Button icon="sap-icon://nav-back" tooltip="nav-back" press="navback"/>
						</m:contentLeft>
						<m:contentMiddle>
							<m:Text text="Ticket"/>
						</m:contentMiddle>
					</m:Bar>
				</navigationBar>
				
			</ObjectPageHeader>
		</headerTitle>
		<headerContent>
			

		</headerContent>
		<sections>
			<ObjectPageSection titleUppercase="false" title="Information">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
                    <blocks>
						<forms:SimpleForm editable="false" layout="ColumnLayout">
                            <core:Title text="General Information"/>
                                <m:Label text="Title" labelFor="Title" />
		<m:Input
			id="Title"
			placeholder="Enter Title" required="true"
			class="sapUiSmallMarginBottom" value="{form>/title}" />

        <m:Label text="Description" labelFor="Description" />
		<m:TextArea id="Description"
			placeholder="Enter Description"
			class="sapUiSmallMarginBottom" maxLength="244" width="100%"  value="{form>/description}"/>
        
        <m:Label text="Type" labelFor="Type" />
		
		<m:ComboBox id="Type" required="true"
			placeholder="Select Type"  value="{form>/type}">
				<core:Item text="Question" />
				<core:Item text="Service Request" />
				<core:Item text="Incident" />
			</m:ComboBox>
		<m:Label text="Date" />
        <m:Text text=" " id="date" />
        <m:Label text="Status" />
        <m:Text text="New"/>     
		            
        </forms:SimpleForm>
        </blocks>
                        <blocks>
						<forms:SimpleForm editable="false" layout="ColumnLayout">
                            <core:Title text="User Information"/>
                                 <m:Label text="Name" labelFor="inputText" />
		<m:Input
			id="inputText" required="true"
			placeholder="Enter text"
			class="sapUiSmallMarginBottom"   value="{form>/name}"/>

		<m:Label text="Email" labelFor="inputEmail" />
		<m:Input
			id="inputEmail" required="true"
			type="Email"
			placeholder="Enter email"
			class="sapUiSmallMarginBottom"  value="{form>/email}" />
                            
                        </forms:SimpleForm>
                        </blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			
		</sections>
		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Emphasized" text="Save" press="create"/>
				<m:Button type="Transparent" text="Cancel" press="navback"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>

