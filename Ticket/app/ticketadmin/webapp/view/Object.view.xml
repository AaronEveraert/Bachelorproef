<mvc:View
    controllerName="ticketadmin.controller.Object"
   xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.uxap"
		xmlns:layout="sap.ui.layout"
		xmlns:m="sap.m"
	
		height="100%"
        xmlns:forms="sap.ui.layout.form"
        xmlns:core="sap.ui.core">

	<ObjectPageLayout  id="ObjectPageLayout" upperCaseAnchorBar="false" showFooter="true">
		<headerTitle>
			<ObjectPageHeader id="headerForTest"
							  objectTitle="{title}"
							  objectSubtitle="{ID}"
							  titleSelectorPress="handleTitleSelectorPress"	  
							  titleSelectorTooltip="Custom Tooltip">
                              	<navigationBar>
					<m:Bar>
						<m:contentLeft>
							<m:Button icon="sap-icon://nav-back" tooltip="nav-back" press="navback"/>
						</m:contentLeft>
						<m:contentMiddle>
							<m:Text text="Ticket"/>
						</m:contentMiddle>
					</m:Bar>
				</navigationBar>
				<actions>
					<m:Button icon="sap-icon://delete"   press="onDelete"/>

				</actions>
			</ObjectPageHeader>
		</headerTitle>
		<headerContent>
			

		</headerContent>
		<sections>
			<ObjectPageSection titleUppercase="false" title="Information">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
                    <blocks>
						<forms:SimpleForm editable="false" layout="ColumnLayout">
                            <core:Title text="General Information"/>
                                <m:Label text="Description" />
                                <m:Text text="{description}"/>

                                <m:Label text="Type" />
                                <m:Text text="{type}"/>
                                
                                <m:Label text="Date" />
                                <m:Text text="{date}"/>

                                <m:Label text="Status" />
                                <m:ComboBox id="Status" required="true"
									placeholder="Select Status"  value="{status}">
									<core:Item text="New" />
									<core:Item text="Pending" />
									<core:Item text=" On hold" />
									<core:Item text="Failed" />
									<core:Item text="Completed" />
			</m:ComboBox>
			<m:Label text="Solution" labelFor="Solution" />
		<m:TextArea id="Solution" 
			placeholder="Enter Solution"
			class="sapUiSmallMarginBottom" maxLength="244" width="100%"  value="{solution}"/>
                            
                        </forms:SimpleForm>
                        </blocks>
                        <blocks>
						<forms:SimpleForm editable="false" layout="ColumnLayout">
                            <core:Title text="User Information"/>
                                <m:Label text="Name" />
                                <m:Text text="{name}"/>

                                <m:Label text="Email" />
                                <m:Text text="{email}"/>
                            
                        </forms:SimpleForm>
                        </blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

		
		</sections>

		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Emphasized" text="Save" press="create"/>
				<m:Button type="Transparent" text="Cancel" press="navback"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>
