<mvc:View
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.uxap"
		xmlns:layout="sap.ui.layout"
		xmlns:m="sap.m"
		controllerName="ticket.controller.Object"
		height="100%"
        xmlns:forms="sap.ui.layout.form"
        xmlns:core="sap.ui.core">

	<ObjectPageLayout  id="ObjectPageLayout" upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageHeader id="headerForTest"
							  objectTitle="{title}"
							  objectSubtitle="{ID}"
							  titleSelectorPress="handleTitleSelectorPress"	  
							  titleSelectorTooltip="Custom Tooltip">
                              	<navigationBar>
					<m:Bar>
						<m:contentLeft>
							<m:Button icon="sap-icon://nav-back" tooltip="nav-back" press="navback"/>
						</m:contentLeft>
						<m:contentMiddle>
							<m:Text text="Ticket"/>
						</m:contentMiddle>
					</m:Bar>
				</navigationBar>
				<actions>
					<m:Button icon="sap-icon://delete"   press="onDelete"/>

				</actions>
			</ObjectPageHeader>
		</headerTitle>
		<headerContent>
			

		</headerContent>
		<sections>
			<ObjectPageSection titleUppercase="false" title="Information">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
                    <blocks>
						<forms:SimpleForm editable="false" layout="ColumnLayout">
                            <core:Title text="General Information"/>
                                <m:Label text="Description" />
                                <m:Text text="{description}"/>

                                <m:Label text="Type" />
                                <m:Text text="{type}"/>
                                
                                <m:Label text="Date" />
                                <m:Text text="{date}"/>

                                <m:Label text="Status" />
                                <m:Text text="{status}"/>
                            
                        </forms:SimpleForm>
                        </blocks>
                        <blocks>
						<forms:SimpleForm editable="false" layout="ColumnLayout">
                            <core:Title text="User Information"/>
                                <m:Label text="Name" />
                                <m:Text text="{name}"/>

                                <m:Label text="Email" />
                                <m:Text text="{email}"/>
                            
                        </forms:SimpleForm>
                        </blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

		
		</sections>
	</ObjectPageLayout>
</mvc:View>
